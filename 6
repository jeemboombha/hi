  fill: #222;
}



import * as dagre from 'dagre';
import { Node, Edge, ClusterNode } from '@swimlane/ngx-graph';

layout = {
  name: 'custom',
  engine: (nodes: Node[], edges: Edge[], clusters: ClusterNode[]) => {
    const g = new dagre.graphlib.Graph();
    g.setGraph({ rankdir: 'TB' }); // TB = top-to-bottom
    g.setDefaultEdgeLabel(() => ({}));

    nodes.forEach(node => {
      g.setNode(node.id, {
        width: node.dimension?.width || 100,
        height: node.dimension?.height || 60
      });
    });

    edges.forEach(link => {
      g.setEdge(link.source, link.target);
    });

    dagre.layout(g);

    return {
      nodes: nodes.map(n => ({
        ...n,
        position: {
          x: g.node(n.id).x,
          y: g.node(n.id).y
        }
      })),
      links: edges,
      clusters
    };
  }
};




import * as dagre from 'dagre';

layout = {
  name: 'custom',
  engine: (nodes, links, clusters) => {
    const g = new dagre.graphlib.Graph();
    g.setGraph({ rankdir: 'LR', ranksep: 100, nodesep: 50 });
    g.setDefaultEdgeLabel(() => ({}));

    // Add all nodes
    nodes.forEach(node => {
      g.setNode(node.id, {
        width: node.dimension?.width || 100,
        height: node.dimension?.height || 60
      });
    });

    // Add all links
    links.forEach(link => {
      g.setEdge(link.source, link.target);
    });

    // Apply layout
    dagre.layout(g);

    // Return updated node positions
    return {
      nodes: nodes.map(n => ({
        ...n,
        position: {
          x: g.node(n.id).x,
          y: g.node(n.id).y
        }
      })),
      links,
      clusters
    };
  }
};


import * as dagre from 'dagre';

computeLayout() {
  const g = new dagre.graphlib.Graph();
  g.setGraph({ rankdir: 'LR', ranksep: 100, nodesep: 50 });
  g.setDefaultEdgeLabel(() => ({}));

  this.nodes.forEach(node => {
    g.setNode(node.id, {
      width: 100,
      height: 60
    });
  });

  this.links.forEach(link => {
    g.setEdge(link.source, link.target);
  });

  dagre.layout(g);

  // Assign computed positions
  this.nodes = this.nodes.map(n => ({
    ...n,
    position: {
      x: g.node(n.id).x,
      y: g.node(n.id).y
    }
  }));
}
